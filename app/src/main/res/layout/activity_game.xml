<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.msu.becketta.steampunked.GameActivity">

    <Button
        android:layout_height="wrap_content"
        android:text="@string/install"
        android:id="@+id/installButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="false"
        android:enabled="true"
        android:nestedScrollingEnabled="false"
        android:onClick="onInstall"
        android:layout_alignParentEnd="false"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disard"
        android:id="@+id/discardButton"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/installButton"
        android:layout_toEndOf="@+id/installButton"
        android:onClick="onDiscard"
        android:layout_alignParentStart="false"
        android:adjustViewBounds="true"
        android:layout_alignBottom="@+id/installButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/openValve"
        android:id="@+id/openValveButton"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/discardButton"
        android:onClick="onOpenValve"
        android:adjustViewBounds="true"
        android:layout_above="@+id/view"
        android:layout_toLeftOf="@+id/surrender"
        android:layout_toStartOf="@+id/surrender"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Surrender"
        android:id="@+id/surrender"
        android:onClick="onForfeit"
        android:layout_alignTop="@+id/discardButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <edu.msu.becketta.steampunked.GameView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:layout_below="@+id/surrender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/surrender" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forefeit"
        android:id="@+id/forefeitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onForfeit"
        android:singleLine="false" />
</RelativeLayout>
