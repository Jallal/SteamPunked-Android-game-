<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/startButton"
        android:onClick="onLoginStartGame"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:windowSoftInputMode="stateVisible|adjustResize" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remember_me"
        android:id="@+id/remember"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:onClick="onCheckboxClicked" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerFields"
        android:layout_above="@+id/startButton"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/splash"
        android:layout_alignRight="@+id/game_instructions"
        android:layout_alignEnd="@+id/game_instructions"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/steampunked_logo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:inputType="text"
        android:fontFamily="sans-serif"
        android:hint="@string/username"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/spinnerFields"
        android:layout_toEndOf="@+id/spinnerFields"
        android:layout_centerInParent="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructions"
        android:id="@+id/game_instructions"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onHowToPlay" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_alignEnd="@+id/username"
        android:fontFamily="sans-serif"
        android:hint="@string/password"
        android:layout_below="@+id/username"
        android:layout_alignLeft="@+id/username" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_user"
        android:id="@+id/create_user"
        android:onClick="onCreateUser"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/password"
        android:layout_alignEnd="@+id/password" />

</RelativeLayout>
