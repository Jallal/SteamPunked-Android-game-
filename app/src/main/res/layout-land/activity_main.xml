<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gameStart"
        android:id="@+id/startButton"
        android:onClick="onStartGame"
        android:layout_above="@+id/game_instructions"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/player1"
        android:id="@+id/player1_label"
        android:layout_above="@+id/player2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/player2"
        android:id="@+id/player2_label"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player1"
        android:layout_alignBottom="@+id/player1_label"
        android:layout_toRightOf="@+id/player1_label"
        android:layout_toEndOf="@+id/player1_label"
        android:layout_toLeftOf="@+id/startButton"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player2"
        android:layout_alignBottom="@+id/player2_label"
        android:layout_toRightOf="@+id/player2_label"
        android:layout_toLeftOf="@+id/startButton"
        android:inputType="text" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerFields"
        android:layout_above="@+id/player1_label"
        android:layout_toLeftOf="@+id/startButton"
        android:layout_toStartOf="@+id/startButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/splash"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/spinnerFields"
        android:contentDescription="@string/steampunked_logo" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructions"
        android:id="@+id/game_instructions"
        android:onClick="onHowToPlay"
        android:layout_alignBaseline="@+id/player2"
        android:layout_alignBottom="@+id/player2"
        android:layout_toRightOf="@+id/player1"
        android:layout_toEndOf="@+id/player1" />

</RelativeLayout>
