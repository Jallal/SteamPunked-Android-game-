<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="edu.msu.becketta.steampunked.GameActivity">

<Button
    android:layout_width = "wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/install"
    android:id="@+id/installButton"
    android:clickable="true"
    android:enabled="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignRight="@+id/openValveButton"
    android:layout_alignEnd="@+id/openValveButton" />

<Button
    android:layout_width = "wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/disard"
    android:id="@+id/discardButton"
    android:layout_above="@+id/openValveButton"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<Button
    android:layout_width = "wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/openValve"
    android:id="@+id/openValveButton"
    android:layout_centerVertical="true"
    android:layout_alignRight="@+id/surrender"
    android:layout_alignEnd="@+id/surrender" />

<Button
    android:layout_width = "wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/Surrender"
    android:id="@+id/surrender"
    android:layout_alignParentBottom="true"
    android:layout_alignRight="@+id/discardButton"
    android:layout_alignEnd="@+id/discardButton" />

<edu.msu.becketta.steampunked.GameView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/view"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@+id/installButton"
    android:layout_toEndOf="@+id/openValveButton"
    android:layout_alignBottom="@+id/surrender" />

</RelativeLayout>